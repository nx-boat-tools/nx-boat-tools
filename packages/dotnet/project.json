{
  "root": "packages/dotnet",
  "sourceRoot": "packages/dotnet/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/dotnet/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/dotnet"],
      "options": {
        "jestConfig": "packages/dotnet/jest.config.js",
        "passWithNoTests": true,
        "coverage": true,
        "coverageReporters": ["cobertura"]
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/dotnet",
        "tsConfig": "packages/dotnet/tsconfig.lib.json",
        "packageJson": "packages/dotnet/package.json",
        "main": "packages/dotnet/src/index.ts",
        "assets": [
          "packages/dotnet/*.md",
          {
            "input": "./packages/dotnet/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/dotnet/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/dotnet",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/dotnet",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "copyTemplates": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "for f in $(find 'packages/dotnet/src' -type f -name '*.template'); do DIR=$(dirname ${f}); mkdir -p dist/${DIR}; cp ${f} dist/${f}; done;"
      }
    },
    "updateDependencies": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "if [[ '{args.pathPrefix}' = 'undefined' ]] ; then pathPrefix=''; else pathPrefix='{args.pathPrefix}/'; fi; node ./scripts/update-dependencies.js --root=$PWD --peerVersion='{args.peerVersion}' --projectDir=${pathPrefix}packages/dotnet"
      }
    },
    "version": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "options": {
        "command": "if [[ '{args.pathPrefix}' = 'undefined' ]] ; then pathPrefix=''; else pathPrefix='{args.pathPrefix}/'; fi; cd ${pathPrefix}packages/dotnet; npm version {args.to} --git-tag-version=false"
      }
    }
  }
}
