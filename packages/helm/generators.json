{
  "$schema": "http://json-schema.org/schema",
  "name": "helm",
  "version": "0.0.1",
  "generators": {
    "local-chart": {
      "factory": "./src/generators/local-chart/generator",
      "schema": "./src/generators/local-chart/schema.json",
      "description": "Add a local helm chart to a project"
    },
    "repo-chart": {
      "factory": "./src/generators/repo-chart/generator",
      "schema": "./src/generators/repo-chart/schema.json",
      "description": "Add a helm chart from a repo to a project"
    },
    "local-chart-project": {
      "factory": "./src/generators/local-chart-project/generator",
      "schema": "./src/generators/local-chart-project/schema.json",
      "description": "Create a new project containing a local helm chart"
    },
    "repo-chart-project": {
      "factory": "./src/generators/repo-chart-project/generator",
      "schema": "./src/generators/repo-chart-project/schema.json",
      "description": "Create a new project containing a helm chart from a repo"
    }
  }
}
